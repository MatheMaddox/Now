<div align="center">
  <form action="/" method="post">
    <h3>New Task Form</h3>

      <div class="form-group">
        <label for="task-task">Task Name</label>
        <input type="text" name="task" class="form-control" id="task-task" placeholder="Task Name">
      </div>

      <div class="form-group">
        <label for="task-EstimatedTime">Estimated Time (minutes)</label>
        <input type="number" name="EstimatedTime" class="form-control" id="task-EstimatedTime" placeholder="EstimatedTime">
      </div>

      <div class="form-group">
        <label for="task-dueDate">Due Date</label>
        <input type="date" name="dueDate" class="form-control" id="task-dueDate" placeholder="Due Date">
      </div>

      <div class="form-group">
        <label for="task-objective">Learning Objective</label>
        <input type="text" name="objective" class="form-control" id="task-objective" placeholder="Objective">
          <div class="mdl-tooltip" data-mdl-for="task-objective">
          </div>
      </div>

      <div class="form-group">
        <label for="task-consequence">Bad Consequence</label>
        <input type="text" name="consequence" class="form-control" id="task-consequence" placeholder="Consequence">
      </div>

      <div class="form-group">
        <label for="task-reward">Instant Reward</label>
        <input type="text" name="reward" class="form-control" id="task-consequence" placeholder="Reward">
      </div>

      <div class="text-right">
        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Submit</button>
      </div>
  </form>
</div>
