<div align="center">
  <h1>Current Tasks to Complete</h1>
</div>
<div class="container-list">
  {{#each task as |task|}}
    {{#if task.completed}}
    {{else}}
      <div class="flex">
        <div class="first" align="left">
          <a href="/tasks/{{task.id}}/confirm" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
            Complete Task
          </a>
        </div>
        <div class="second" align="center">
          <a href="/tasks/{{task.id}}" class="mdl-button mdl-js-button">{{task.task}}</a>
        </div>

        <div class="third" align="right">
          <p>Due: {{task.ddm}}/{{task.ddd}}/{{task.ddy}}</p>
        </div>
      </div>
    {{/if}}
  {{/each}}
  <div align="center">
    <!-- <a href="/completed" class="lg-button mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">View Completed Tasks</a> -->

  </div>
</div>
<script>
  $("form").click(function(){
    function now() {
    console.log('Click!');
    }
    function wait() {
      document.getElementById("completed").submit();
      console.log('Wait a second...');
    }
    now();
    setTimeout(wait, 2000);
  });
</script>

