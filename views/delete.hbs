<div align="center">
  <div class="demo-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Confirm Deletion of {{task.task}}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      Are you sure you want to permanently delete this task?
    </div>
    <form method="post" id="confirmForm" action="/">
      <input id="confirm-id" type="hidden" value="{{task.id}}">
      <div align="center">
        <label align="center" class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-2">
          <input type="checkbox" value=true id="switch-2" name="delete" class="mdl-switch__input">
          <span class="mdl-switch__label"></span>
        </label>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <button id="confirmBack" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit">Back</button>
      </div>
    </form>
  </div>
</div>
<script>
  $("*").click(function(){
    var checkedBox = document.getElementById('switch-2').checked;
    if (checkedBox) {
      document.getElementById("confirmBack").innerHTML="Confirm";
      document.getElementById("confirmForm").setAttribute('action', "/deleted");
    }
  });
