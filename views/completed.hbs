<div align="center">
  <h3>Completed Tasks</h3>
</div>
<table class="fullTable mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Task</th>
      <th>Previous Due Date</th>
      <th>Estimated Time</th>
      <div align="center">
        <th>Redo Task</th>
      </div>
    </tr>
  </thead>
  <tbody>
    {{#each task as |task|}}
    {{#if task.completed}}
    <a href="/tasks/{{task.id}}">
    <tr>
      <td class="mdl-data-table__cell--non-numeric"><a href="/tasks/{{task.id}}" class="mdl-button mdl-js-button">{{task.task}}</a></td>
      {{#if task.dueDate}}
      <td>{{task.dueDate}}</td>
      {{else}}
      <td>unknown</td>
      {{/if}}
      <td>{{task.estimatedTime}} minutes</td>
      <td>
        <a href="/tasks/{{task.id}}/undo" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
           Redo
        </a>
      </td>
    </tr>
    </a>
    {{/if}}
    {{/each}}
  </tbody>
</table>
<div align="center">
  <a href="/deletecompletedconfirm" class="lg-button mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect delete-btn">Clear All Completed Tasks</a>
</div>
